<h2>这里是所有注册用户的列表</h2>

<%= link_to "注册新用户", signup_path, class: "btn btn-primary btn-lg btn-extra"  %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">注册时间</th>
      <th scope="col">用户名</th>
      <th scope="col">电子邮件</th>
      <th scope="col">哈希加密后的密码</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.created_at.strftime('%F %T') %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
      </tr>
    <% end %>
  </tbody>
</table>
